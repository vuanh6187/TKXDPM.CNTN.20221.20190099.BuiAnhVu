<AnchorPane prefHeight="688.0" prefWidth="991.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="pageTitle" layoutX="70.0" layoutY="1.0" prefHeight="96.0" prefWidth="216.0" text="Payment" textAlignment="CENTER" textFill="#5091e6">
         <font>
            <Font name="Segoe UI Semibold" size="42.0" />
         </font>
      </Label>
      <ImageView fitHeight="73.0" fitWidth="73.0" layoutX="4.0" layoutY="18.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../Assert/ICON/Logo.png" />
         </image>
      </ImageView>
      <Label layoutX="26.0" layoutY="97.0" prefHeight="50.0" prefWidth="251.0" text="Payment method">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="69.0" layoutY="163.0" prefHeight="46.0" prefWidth="156.0">
         <children>
            <RadioButton disable="true" mnemonicParsing="false" selected="true" text="Credit Card">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </RadioButton>
         </children>
      </VBox>
      <VBox layoutX="378.0" layoutY="61.0" prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label prefHeight="50.0" prefWidth="182.0" text="Card number:">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="cardNumber" text="01234567891011">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </TextField>
            <Label prefHeight="50.0" prefWidth="231.0" text="Card holder name:">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="holderName" text="Vu Anh">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </TextField>
            <Label prefHeight="50.0" prefWidth="243.0" text="Expiration date:">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="expirationDate" text="20/11">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </TextField>
            <Label text="Card security code:">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="securityCode" text="1234">
               <font>
                  <Font name="Calibri" size="24.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <Button fx:id="btnConfirmPayment" alignment="CENTER" contentDisplay="CENTER" layoutX="356.0" layoutY="580.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="316.0" style="-fx-background-color: red; -fx-cursor: hand;" text="Confirm payment" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
